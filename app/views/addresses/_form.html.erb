<%= simple_form_for [@customer, @address] do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.addresses.errors.count, "error") %> prohibited this customer from being saved:</h2>
      <ul>
      <% @customer.addresses.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="jumbotron">

    <div class="form-group">
      <label> Type </label>
      <%= f.select :address_type, ["Billing/Shipping", 'Shipping', 'Billing'], :class => 'form-control'%>
    </div>

    <div class="form-group">
      <label> Line one </label>
      <%= f.text_field :line_1, placeholder: "Line one", :class => 'form-control'%>
    </div>

    <div class="form-group">
      <label> Line two </label>
      <%= f.text_field :line_2, placeholder: "Line two", :class => 'form-control'%>
    </div>

    <div class="form-group">
      <label> Line three </label>
      <%= f.text_field :line_3, placeholder: "Line three", :class => 'form-control'%>
    </div>

    <div class="form-group">
      <label> City </label>
      <%= f.text_field :city, placeholder: "City", :class => 'form-control'%>
    </div>

    <div class="form-group">
      <label> Postcode </label>
      <%= f.text_field :postcode, placeholder: "Postcode", :class => 'form-control'%>
    </div>

    <div class="form-group">
      <label> Country </label>
      <%= f.text_field :country, placeholder: "Country", :class => 'form-control'%>
    </div>

    <%= f.submit "Submit", class: "btn btn-primary"%>
  </div>
<% end %>
