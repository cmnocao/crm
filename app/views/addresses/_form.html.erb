<%= semantic_form_for @address do |f| %>
  <%= f.inputs do %>
    <%= f.input :line_1 %>
    <%= f.input :city %>
    <%= f.input :country %>
    <%= f.input :type %>
    <%= f.input :postcode %>
    <%= f.input :customer_id %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
