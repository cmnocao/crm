<%= semantic_form_for [@customer, @address], :html => { :class => "ui form"} do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.addresses.errors.count, "error") %> prohibited this customer from being saved:</h2>
      <ul>
      <% @customer.addresses.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label> Line 1 </label>
    <%= f.text_field :line_1, placeholder: "Line 1"%>
  </div>

  <div class="field">
    <label> City </label>
    <%= f.text_field :city, placeholder: "City"%>
  </div>

  <div class="field">
    <label> Country </label>
    <%= f.text_field :country, placeholder: "Country"%>
  </div>

  <div class="field">
    <label> Type </label>
    <%= f.text_field :address_type, placeholder: "Type"%>
  </div>

  <div class="field">
    <label> Postcode </label>
    <%= f.text_field :postcode, placeholder: "Postcode"%>
  </div>

  <%= f.submit "Submit", :class => 'ui button blue'%>

<% end %>
