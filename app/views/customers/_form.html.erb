<%= simple_form_for @customer do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>
      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="jumbotron">
    <h1 class="display-5">New Customer</h1>

    <p class="lead">Personal Details</p>

    <div class="form-group">
      <label> First Name </label>
      <%= f.text_field :first_name, placeholder: "Enter first name", class: 'form-control'%>
    </div>

    <div class="form-group">
      <label> Last Name </label>
      <%= f.text_field :last_name, placeholder: "Enter last name", class: 'form-control'%>
    </div>

    <%= f.fields_for :phones do |n| %>
      <div class="form-group">
        <label> Phone </label>
        <%= n.text_field :number, placeholder: "Enter phone number", class: 'form-control'%>
      </div>
    <% end %>

    <div class="form-group">
      <label> Email </label>
      <%= f.text_field :email, placeholder: "Enter email", class: 'form-control'%>
    </div>

    <div class="form-group">
      <label> Comments </label>
      <%= f.text_area :comment, placeholder: "Enter comments", class: 'form-control'%>
    </div>

    <p class="lead">Address</p>

    <%= f.fields_for :addresses do |p| %>
      <div class="form-group">
        <label> Type </label>
        <%= p.select :address_type, ['Billing/Shipping', 'Billing', 'Shipping'] %>
      </div>

      <div class="form-group">
        <label> Street </label>
        <%= p.text_field :line_1, placeholder: "Street", class: 'form-control'%>
      </div>

      <div class="form-group">
        <label> City </label>
        <%= p.text_field :city, placeholder: "City", class: 'form-control'%>
      </div>

      <div class="form-group">
        <label> Country </label>
        <%= p.text_field :country, placeholder: "Country", class: 'form-control'%>
      </div>

      <div class="form-group">
        <label> Postcode </label>
        <%= p.text_field :postcode, placeholder: "Postcode", class: 'form-control'%>
      </div>
    <% end %>
  </div>
  <div class="box-footer">
    <%= f.submit "Submit", class: "btn btn-primary"%>

<% end %>
