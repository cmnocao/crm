<%= simple_form_for @customer do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>
      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label> First Name </label>
    <%= f.text_field :first_name, placeholder: "First name", class: 'form-control'%>
  </div>

  <div class="form-group">
    <label> Last Name </label>
    <%= f.text_field :last_name, placeholder: "Last name", class: 'form-control'%>
  </div>

  <h3>Phone</h3>

  <%= f.fields_for :phones do |n| %>
    <div class="form-group">
      <label> Phone </label>
      <%= n.text_field :number, placeholder: "Phone", class: 'form-control'%>
    </div>
  <% end %>

  <div class="form-group">
    <label> Email </label>
    <%= f.text_field :email, placeholder: "Email", class: 'form-control'%>
  </div>

  <div class="form-group">
    <label> Comments </label>
    <%= f.text_area :comment, placeholder: "Comments", class: 'form-control'%>
  </div>

  <h3>Address</h3>

  <%= f.fields_for :addresses do |p| %>
    <div class="form-group">
      <label> Street </label>
      <%= p.text_field :line_1, placeholder: "Street", class: 'form-control'%>
    </div>

    <div class="form-group">
      <label> City </label>
      <%= p.text_field :city, placeholder: "City", class: 'form-control'%>
    </div>

    <div class="form-group">
      <label> Country </label>
      <%= p.text_field :country, placeholder: "Country", class: 'form-control'%>
    </div>

    <div class="form-group">
      <label> Postcode </label>
      <%= p.text_field :postcode, placeholder: "Postcode", class: 'form-control'%>
    </div>
  <% end %>

  <%= f.submit "Submit", class: "btn btn-primary"%>

<% end %>
