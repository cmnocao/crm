<p id="notice"><%= notice %></p>

<p>
  <strong>Full Name:</strong>
  <%= @customer.full_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @customer.email %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @customer.phones.last.number %>
</p>

<p>
  <strong>Comments:</strong>
  <%= @customer.comment %>
</p>
<hr/>
<p>
  <strong>Addresses:</strong>
  <% if !@customer.addresses.empty? %>
    <dl>
      <% @customer_addresses.each do |address| %>
        <dt><%= address.full_address %>
          <% if address.quote %>
            <dd> Bike: <%= number_to_currency(CourierRate.where(postcode: address.postcode_half, vehicle: "bike").first.price, unit: "£", separator: ",")%>
            <dd> Car:  <%= number_to_currency(CourierRate.where(postcode: address.postcode_half, vehicle: "car").first.price, unit: "£", separator: ",") %>
          <% end %>
      <% end %>
    </dl>
  <% end %>
</p>
<hr>
<br>
<strong>Orders</strong>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Items</th>
      <th scope="col">Postage Method</th>
      <th scope="col">Postage Price</th>
      <th scope="col">Total</th>
      <th scope="col">Invoice</th>
      <th scope="col">Comments</th>
      <th scope="col">Created by</th>
    </tr>
  </thead>
  <tbody>
    <% @customer_orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= order.item %></td>
        <td><%= order.postage_method %></td>
        <td><%= number_to_currency(order.postage_price, unit: "£", separator: ",") %></td>
        <td><%= number_to_currency(order.total, unit: "£", separator: ",") %></td>
        <td><%= order.invoice %></td>
        <td><%= order.comment %></td>
        <td>Fabio</td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<%= link_to 'Edit', edit_customer_path(@customer), class: "btn btn-success" %> |
<%= link_to 'Back', customers_path, class: "btn btn-secondary"%> |
<%= link_to 'New address', new_customer_address_path(@customer), class: "btn btn-primary" %> |
<%= link_to 'New order', new_customer_order_path(@customer), class: "btn btn-primary" %>
