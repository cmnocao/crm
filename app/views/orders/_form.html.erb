<%= simple_form_for [@customer, @order] do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this customer from being saved:</h2>
      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="jumbotron">
    <h1 class="display-5">New Order</h1>
    <p class="lead">Order details</p>

    <div class="form-group">
      <label> Items </label>
      <%= f.text_field :item, placeholder: "Items", class: 'form-control'%>
    </div>

    <div class="form-group">
      <label> Address </label>
      <%= f.collection_select :address_id, @customer.addresses.all, :id, :full_address, prompt: "Select address" %>
    </div>


    <div class="form-group">
      <label> Postage method </label>
      <%= f.select :postage_method, ['Special', '1st Class', 'Bike', 'Car', 'IPEX'], prompt: "Select postage method"%>
    </div>

    <div class="form-group">
      <label> Postage price </label>
      <%= f.text_field :postage_price, placeholder: "Postage price", class: 'form-control'%>
    </div>

    <div class="form-group">
      <label> Total  </label>
      <%= f.text_field :total, placeholder: "Total", class: 'form-control'%>
    </div>

    <div class="form-group">
      <label> Invoice </label>
      <%= f.text_field :invoice, placeholder: "Invoice", class: 'form-control'%>
    </div>

    <div class="form-group">
      <label> Comments </label>
      <%= f.text_area :comment, placeholder: "Comments", class: 'form-control'%>
    </div>
  </div>
  <div class="box-footer">
    <%= f.submit "Submit", class: "btn btn-primary"%> |

<% end %>
