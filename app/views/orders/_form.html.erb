<%= simple_form_for [@customer, @order] do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this customer from being saved:</h2>
      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">

    <h1 class="display-5">New Order</h1>
    <p class="lead">Order details</p>



    <div class="form-row">
      <div class="form-group col-md-6">
        <label>Address</label>
        <%= f.collection_select :address_id, @customer.addresses.all, :id, :address_line, prompt: "Select address", class: "form-control" %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-12">
        <label>Items</label>
        <%= f.text_field :item, placeholder: "Items", class: 'form-control'%>
      </div>
    </div>


    <div class="form-row">
      <div class="form-group col-md-6">
        <label>Postage method</label>
        <%= f.select(:postage_method, options_for_select(['Special', '1st Class', 'Bike', 'Car', 'IPEX']), {}, {class: "form-control"}) %>
      </div>

      <div class="form-group col-md-6">
        <label>Postage price</label>
        <%= f.text_field :postage_price, placeholder: "Postage price", class: 'form-control'%>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label>Total</label>
        <%= f.text_field :total, placeholder: "Total", class: 'form-control'%>
      </div>

      <div class="form-group col-md-6">
        <label> Invoice </label>
        <%= f.text_field :invoice, placeholder: "Invoice", class: 'form-control'%>
      </div>
    </div>

    <div class="form-group">
      <label> Comments </label>
      <%= f.text_area :order_comment, placeholder: "Comments", class: 'form-control'%>
    </div>

  </div>
      <div class="box-footer">
        <%= f.submit "Submit", class: "btn btn-primary"%> |

<% end %>
